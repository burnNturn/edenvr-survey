<%= form_for customer, :html => { :id => machine + "_form" }, remote: true do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :date, value: Time.now %>
  <%= f.hidden_field :machine, value: machine %>

  <div class="field">
    <%= f.label :game %>
    <%= f.text_field :game %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.select :age, options_for_select(Customer::AGE_ARRAY) %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, options_for_select(Customer::GENDER_ARRAY) %>
  </div>

  <div class="field">
    <%= f.label :race %>
    <%= f.select :race, options_for_select(Customer::RACE_ARRAY) %>
  </div>

  <div class="field">
    <%= f.label :income %>
    <%= f.select :income, options_for_select(Customer::INCOME_ARRAY) %>
  </div>

  <div class="field">
    <%= f.label :group_type %>
    <%= f.text_field :group_type %>
  </div>

  <div class="field">
    <%= f.label :group_size %>
    <%= f.number_field :group_size %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
