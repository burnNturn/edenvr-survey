<p id="notice"><%= notice %></p>

<h1>Customers</h1>
<div>
  <%= form_tag customers_path, method: :get do %>
    <span>
      <%= text_field_tag :game, params[:game], placeholder: "Search Game" %>
    </span>
    <%= select_tag :gender, options_for_select(Customer::GENDER_ARRAY) %>
    <%= fa_icon 'search' %>
    <!-- :name => nil will make url cleaner -->
    <%= submit_tag "Search", :name => nil, class: 'blue-btn' %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Machine</th>
      <th>Game</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Race</th>
      <th>Income</th>
      <th>Group type</th>
      <th>Group size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.date %></td>
        <td><%= customer.machine %></td>
        <td><%= customer.game %></td>
        <td><%= customer.age %></td>
        <td><%= customer.gender %></td>
        <td><%= customer.race %></td>
        <td><%= customer.income %></td>
        <td><%= customer.group_type %></td>
        <td><%= customer.group_size %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
