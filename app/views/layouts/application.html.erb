<!DOCTYPE html>
<%= javascript_include_tag 'application.js' %>
<html>
  <head>
    <title>Survey</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- --><%= stylesheet_link_tag "application", media: "all",
      "data-turbolinks-track" => 'reload' %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %><!-- -->
  </head>
  <body>
    <nav class="navbar  navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">EdenVR</a>
        </div>
        <% if user_signed_in? %>
          <ul class="nav navbar-nav">
            <li><%= link_to 'Customers', customers_path %></li>
            <li><%= link_to '+Add Customer', new_customer_path,
              style: 'border-left: 1px solid;' %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Profile", edit_user_registration_path %></li>
            <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Sign in", new_user_session_path %></li>
          </ul>
        <% end %>
      </div>
    </nav>
  
      
    <div id="body" class="container-fluid bg-1 text-center">
      <div class='<%= controller.controller_name %>'>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
