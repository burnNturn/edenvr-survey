<table class="table" id="games-table", remote: true>
  <thead>
    <tr>
      <th>Game</th>
      <th>Available?</th>
      <th style="width=40px"></th>
    </tr>
  </thead>

  <tbody>
    <% collection.each do |game| %>
      <tr>
        <td display: none, value: game.id><%= hidden_field_tag "game_id" , value = game.id %></td>
        <td><%= game.title %></td>
        <td><%= check_box_tag "available_#{game.id}", value= nil, checked = game.available, class: 'available-checkbox', disabled: true %></td>
        <td class="hide-link"><%= link_to fa_icon('pencil'), edit_game_path(game), class: "edit-delete-icon" %></td>
        <td class="hide-link"><%= link_to fa_icon('trash'), game, method: :delete, data: { confirm: 'Are you sure?' }, class: "edit-delete-icon" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
